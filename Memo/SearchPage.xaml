      xmlns:local="clr-namespace:Memo"
      mc:Ignorable="d" 
      d:DesignHeight="200" d:DesignWidth="800"
      Title="SearchPage">

    <Grid Background="AntiqueWhite" Margin="0,0,0,46" Height="30" VerticalAlignment="Top">
        <Button x:Name="submitButton" Content="Найти" Click="SubmitButton_Click" VerticalAlignment="Center" HorizontalAlignment="Left" MinWidth="100" Margin="671,0,0,0"/>
        <Label Content="Поиск по названию сорта овоща:" HorizontalAlignment="Left" Margin="10,-1,0,0" VerticalAlignment="Top" Width="332"/>
        <TextBox x:Name="vegetableName" HorizontalAlignment="Left" Margin="204,4,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="240" Height="21" FontSize="14"/>
        <Button x:Name="cancelButton" Content="Отмена" Click="CancelButton_Click" VerticalAlignment="Center" HorizontalAlignment="Left" MinWidth="100" Margin="549,0,0,0"/>
    </Grid>
</Page>
