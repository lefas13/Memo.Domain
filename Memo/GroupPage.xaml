<Page x:Class="Memo.GroupPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Memo"
      mc:Ignorable="d" 
      d:DesignHeight="80" d:DesignWidth="800"
      Title="GroupPage">

    <Grid Background="AntiqueWhite" Margin="0,0,0,46" Height="30" VerticalAlignment="Top">
        <Button x:Name="submitButton" Content="Сгруппировать" Click="SubmitButton_Click" VerticalAlignment="Center" HorizontalAlignment="Left" MinWidth="100" Margin="671,0,0,0"/>
        <Label Content="Групировать по:" HorizontalAlignment="Left" Margin="10,-1,0,0" VerticalAlignment="Top" Width="332"/>
        <Button x:Name="cancelButton" Content="Отмена" Click="CancelButton_Click" VerticalAlignment="Center" HorizontalAlignment="Left" MinWidth="100" Margin="549,0,0,0"/>
        <ComboBox x:Name="By" HorizontalAlignment="Left" Margin="114,4,0,0" VerticalAlignment="Top" Width="100">
            <TextBlock>Виду овоща</TextBlock>
            <TextBlock>Времени сбора урожая</TextBlock>
        </ComboBox>
        <ComboBox x:Name="Group" HorizontalAlignment="Left" Margin="224,4,0,0" VerticalAlignment="Top" Width="100"/>
    </Grid>
</Page>
