<Window x:Class="Memo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Memo"
        mc:Ignorable="d"
        Title="Памятка дачнику-овощеводу" Height="450" Width="1000">
    <Grid>
            <DataGrid x:Name="dataGrid" Margin="0,0,0,0" 
                      AutoGeneratingColumn="OnAutoGeneratingColumn"
                      IsReadOnly="True" ColumnWidth="250*" 
                      CanUserResizeColumns="False"
                      CanUserResizeRows="False"/>
            <Frame x:Name="PageFrame" NavigationUIVisibility="Hidden"></Frame>
        </Grid>
</Window>

